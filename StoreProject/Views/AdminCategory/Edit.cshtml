@model StoreProject.Models.ViewModels.EditCategoryRequest


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Category</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null)
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">ID</label>
                <input type="text" id="id" class="form-control" asp-for="CategoryId" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="CategoryName" />
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" id="description" class="form-control" asp-for="CategoryDescription" />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-dark">Update</button>
            </div>
        </form>
    }
    else
    {
        <p>No category found!</p>
    }

</div>