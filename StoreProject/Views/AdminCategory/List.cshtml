@model List<StoreProject.Models.Domain.Category>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Categories</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td>@category.CategoryDescription</td>                                
                        <td>
                            <a class="btn btn-dark" asp-area="" asp-controller="AdminCategory" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a> |
                             <a class="btn btn-danger" asp-area="" asp-controller="AdminCategory" asp-action="Delete" asp-route-id="@category.CategoryId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No categories found!</p>
    }
</div>